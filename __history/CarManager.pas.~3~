{$R *.dfm}

procedure TFormCM.FormActivate(Sender: TObject);
begin
  labelMessage.Caption  :='*** 공지사항 *** 2014년 4월 18일부터 차량관리 '+
    '프로그램 제작을 시작하였습니다. 본 공지사항은 소소한 팁입니다....';
end;

procedure TFormCM.Timer1Timer(Sender: TObject);
var
  i,iLen,vLen : Integer;
begin
   iLen:=( length(LabelMessage.Caption) + 10 ) * (-1) ;
   vLen:=PanelMessage.Width-5;
   if LabelMessage.left > -548 then     // -548
    begin
      LabelMessage.left := LabelMessage.left-2;
      inc(i);

    end else LabelMessage.left := iLen; //800;

end;

end.
